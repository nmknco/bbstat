{
    "manifest_version":2,

    "name": "bbstat",
    "description": "baseball stats enhancement",
    "version":"0.1.2",

    "permissions": [
        "tabs",
        "storage",
        "http://locahost:2334/*"
    ],
    
    "browser_action": {
        "default_icon": "bb.png",
        "default_popup": "popup.html"
    },

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "css": ["content.css"],
            "js": [ "jquery-3.2.1.js",
                    "contentscript.js",
                    "contentinit.js"]
        }
    ],

    "background": {
        "scripts": [
            "jquery-3.2.1.js",
            "popup.js",
            "background.js"
        ],
        "persistent": true
    },

    "web_accessible_resources": ["data/people.json"]
}