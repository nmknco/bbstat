{
    "manifest_version":2,

    "name": "BBSTAT: Easy Baseball Stats Everywhere",
    "description": "Easy access of MLB player statistics from any page",
    "version":"0.2.2",

    "permissions": [
        "tabs",
        "storage",
        "http://locahost:2334/*"
    ],
    
    "browser_action": {
        "default_icon": "bb.png",
        "default_popup": "popup.html"
    },

    "content_scripts": [
        {
            "matches": ["<all_urls>"],
            "css": ["content.css"],
            "js": [ 
                    "toggleDebug.js",
                    "debug.js",
                    "jquery-3.2.1.js",
                    "contentscript.js",
                    "contentinit.js",
                    "contentChangeWatcher.js"
                  ]
        }
    ],

    "background": {
        "scripts": [
            "jquery-3.2.1.js",
            "popup.js",
            "background.js"
        ],
        "persistent": true
    },

    "web_accessible_resources": ["data/people.json"]
}